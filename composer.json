{
    "name": "peon/php-recipes",
    "type": "project",
    "description": "",
    "authors": [
        {
            "name": "Jan MikeÅ¡",
            "email": "j.mikes@me.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1.0",
        "rector/rector": "^0.15.16",
        "symfony/console": "^6.2",
        "symfony/process": "^6.2",
        "symfony/runtime": "^6.2"
    },
    "require-dev": {
        "ext-simplexml": "*",
        "nette/utils": "^4.0",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-symfony": "^1.0",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Peon\\PhpRecipes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peon\\PhpRecipes\\Tests\\": "tests"
        }
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "6.2.*"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan --memory-limit=-1 analyse"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/runtime": true
        }
    }
}
